<%= form_with model: @menu, url: kitchencar_menu_path, method: :patch, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field mb-4 w-75 center-block">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control'%>
    <% if @menu.errors.any? %>
      <% errors_hash(@menu, :name).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
    <% end %>
  </div>

   <div class="field mb-4 w-75 center-block">
    <%= f.label :description %>
    <%= f.text_area :description, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field mb-4 w-75 center-block">
    <%= f.label :price %>
    <%= f.text_field :price, autofocus: true, class: 'form-control' %>
    <% if @menu.errors.any? %>
      <% errors_hash(@menu, :price).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="image mb-4 w-75 center-block">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="actions text-center mb-4">
    <%= f.submit "更新", class: 'btn btn-primary w-25'%>
  </div>
<% end %>