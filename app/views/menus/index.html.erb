<%= link_to "メニュー作成", new_kitchencar_menu_path if current_kitchencar %>

<% @menus.each do |menu| %>
  <%= menu.name %>
  <%= image_tag menu.image.variant(resize: '100x100').processed if menu.image.attached? %>
  <%= menu.description %>
  <%= menu.price %>
  <%= link_to "編集", edit_kitchencar_menu_path(current_kitchencar, menu) if current_kitchencar %>
  <%= link_to "削除", kitchencar_menu_path(current_kitchencar, menu), method: :delete, data: { confirm: "削除しますか？" }  if current_kitchencar %>
<%end%>