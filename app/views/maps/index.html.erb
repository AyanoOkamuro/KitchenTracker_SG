<div id='map' class="center-block mb-4"></div>

<style>
    #map {
        width: 70%;
        padding: 0 0 50%;
    }
</style>

<script>
    let map

    function initMap() {
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: 35.6803997, lng: 139.7690174},
            zoom: 15
        });

        <% @microposts.each do |micropost| %>
        (function() {
            let marker = create_marker({
                position: {lat: <%= micropost.latitude %>, lng: <%= micropost.longitude %>},
                map: map,
            });
            let infowindow = new google.maps.InfoWindow({
                position: {lat: <%= micropost.latitude %>, lng: <%= micropost.longitude %>},
                content: "<a href='<%= kitchencar_path(micropost.kitchencar.id) %>'><%= micropost.kitchencar.name %></a>"
            });
            marker.addListener('click', function() {
                infowindow.open(map, marker);
            });
        })();
        <% end %>
    }

    function create_marker(options) {
        let m = new google.maps.Marker(options);
        return m;
    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>


