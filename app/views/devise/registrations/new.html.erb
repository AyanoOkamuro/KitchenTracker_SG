<h2>Sign up</h2>

<%= form_with model: @kitchencar, url: kitchencar_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <div class="field">
      <%= f.label :名前,  class: 'form-label'%><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :ロケーション %><br />
    <%= f.text_field :location, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :説明 %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <span class="image">
    <%= f.label :写真 %><br />
    <%= f.file_field :portraits, multiple: true %>
  </span>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
