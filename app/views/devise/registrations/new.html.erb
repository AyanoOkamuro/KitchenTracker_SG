<h3 class="col d-flex justify-content-center"><%= t('.sign_up') %></h3>

<%= form_with model: @kitchencar, url: kitchencar_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control'%>
      <% errors_hash(resource,:name).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
      <% errors_hash(resource, :email).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true, class: 'form-control'%>
      <% errors_hash(resource, :location).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, class: 'form-control' %>
  </div>

  <div class="image mb-4">
    <%= f.label :image %><br />
    <%= f.file_field :portraits, multiple: true, class: 'form-control'%>
  </div>

  <div class="field mb-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% errors_hash(resource, :password).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-4' %>
      <% errors_hash(resource, :password_confirmation).each do |error_msg| %>
        <p class="text-xs text-danger"><%= error_msg %></p>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-block mb-4' %>
  </div>
<% end %>

<div class="text-center mb-4">
  <%= render "devise/shared/links" %>
</div>
