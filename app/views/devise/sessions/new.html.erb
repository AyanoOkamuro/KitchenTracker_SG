<h3 class="col d-flex justify-content-center"><%= t('.sign_in') %></h3>

<%= form_with model: @kitchencar, url: kitchencar_session_path, local: true do |f| %>
  <div class="field mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: 'btn btn-primary btn-block mb-4'%>
  </div>
  <div class="text-center">
    <%= link_to t(".forgot_your_password"), new_password_path(resource_name) %>
  </div>
<% end %>

<h3 class="text-center">初めての方は</h3>

<div class="text-center mb-4">
  <%= link_to t(".sign_up"), new_registration_path(resource_name), class: 'mb-4 btn btn-success btn-block' %><br />
</div>